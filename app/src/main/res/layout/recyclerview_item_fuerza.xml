<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="50dp"
        android:focusable="true"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="4dp"
        card_view:contentPadding="3dp"
        card_view:cardUseCompatPadding="true"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/Nombre_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="fill_vertical"
            android:maxEms="9"
            android:maxLines="2"
            android:minLines="2"
            android:text="@string/titulo"
            android:textSize="18sp"
            card_view:layout_constraintBottom_toTopOf="@+id/textView_title_numejercicios"
            card_view:layout_constraintStart_toEndOf="@+id/imageView3"
            card_view:layout_constraintTop_toTopOf="@+id/imageView3" />

        <TextView
            android:id="@+id/Num_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/num"
            android:textSize="13sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/textView_title_numejercicios"
            card_view:layout_constraintStart_toEndOf="@+id/textView_title_numejercicios" />

        <TextView
            android:id="@+id/RPE_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RPE"
            android:textSize="30sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/textView_title_numejercicios"
            card_view:layout_constraintEnd_toEndOf="@+id/textView9"
            card_view:layout_constraintHorizontal_bias="0.625"
            card_view:layout_constraintStart_toStartOf="@+id/textView9"
            card_view:layout_constraintTop_toBottomOf="@+id/textView9"
            card_view:layout_constraintVertical_bias="0.666" />

        <TextView
            android:id="@+id/textView_title_numejercicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/n_mero_ejercicios"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageView3"
            card_view:layout_constraintStart_toStartOf="@+id/Nombre_textView" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:minLines="2"
            android:text="@string/rpe_objetivo"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/Nombre_textView" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/fuerzaa"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@mipmap/ejercicio_fuerza" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

