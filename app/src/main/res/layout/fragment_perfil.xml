<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Perfil.PerfilFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="#020202"
        android:contentDescription="@string/Perfil"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:src="@tools:sample/avatars"
        tools:srcCompat="@tools:sample/avatars"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewtitulo_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/nombre"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewtitulo_Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewtitulo_Nombre"
        app:layout_constraintTop_toTopOf="@+id/textViewtitulo_Nombre" />

    <TextView
        android:id="@+id/TextViewtitulo_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/fecha_nacimiento"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textViewtitulo_Nombre"
        app:layout_constraintTop_toBottomOf="@+id/textViewtitulo_Nombre" />

    <TextView
        android:id="@+id/TextView_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fecha_nacimiento"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/TextViewtitulo_fecha"
        app:layout_constraintStart_toStartOf="@+id/textView_Nombre"
        app:layout_constraintTop_toTopOf="@+id/TextViewtitulo_fecha" />

    <TextView
        android:id="@+id/textViewtitulo_Genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/g_nero"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/TextViewtitulo_fecha"
        app:layout_constraintTop_toBottomOf="@+id/TextViewtitulo_fecha" />

    <TextView
        android:id="@+id/textView_Genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/g_nero"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewtitulo_Genero"
        app:layout_constraintStart_toStartOf="@+id/TextView_fecha"
        app:layout_constraintTop_toTopOf="@+id/textViewtitulo_Genero" />

    <TextView
        android:id="@+id/textViewtitulo_Estatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/estatura"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textViewtitulo_Genero"
        app:layout_constraintTop_toBottomOf="@+id/textViewtitulo_Genero" />

    <TextView
        android:id="@+id/textView_Estatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/estatura"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewtitulo_Estatura"
        app:layout_constraintStart_toStartOf="@+id/textView_Genero"
        app:layout_constraintTop_toTopOf="@+id/textViewtitulo_Estatura" />

    <TextView
        android:id="@+id/textViewtitulo_Peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/peso"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textViewtitulo_Estatura"
        app:layout_constraintTop_toBottomOf="@+id/textViewtitulo_Estatura" />

    <TextView
        android:id="@+id/textView_Peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/peso"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewtitulo_Peso"
        app:layout_constraintStart_toStartOf="@+id/textView_Estatura"
        app:layout_constraintTop_toTopOf="@+id/textViewtitulo_Peso" />

    <TextView
        android:id="@+id/textViewtitulo_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:minLines="2"
        android:text="@string/email"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textViewtitulo_Peso"
        app:layout_constraintTop_toBottomOf="@+id/textViewtitulo_Peso" />

    <TextView
        android:id="@+id/textView_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="7"
        android:maxLines="3"
        android:text="@string/email"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewtitulo_Email"
        app:layout_constraintStart_toStartOf="@+id/textView_Peso"
        app:layout_constraintTop_toTopOf="@+id/textViewtitulo_Email" />

    <TextView
        android:id="@+id/textView_Cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="cm"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Estatura"
        app:layout_constraintStart_toEndOf="@+id/textView_Estatura"
        app:layout_constraintTop_toTopOf="@+id/textView_Estatura" />

    <TextView
        android:id="@+id/textView_Kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Kg"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Peso"
        app:layout_constraintStart_toEndOf="@+id/textView_Peso"
        app:layout_constraintTop_toTopOf="@+id/textView_Peso" />

    <TextView
        android:id="@+id/textViewtitulo_actividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tipo_actividad"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textViewtitulo_Email"
        app:layout_constraintTop_toBottomOf="@+id/textViewtitulo_Email" />

    <TextView
        android:id="@+id/textView_Actividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tipo_actividad"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewtitulo_actividad"
        app:layout_constraintStart_toStartOf="@+id/textView_Email"
        app:layout_constraintTop_toTopOf="@+id/textViewtitulo_actividad"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>